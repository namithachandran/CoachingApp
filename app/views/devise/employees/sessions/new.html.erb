<div class="login-container">
  <h2>Employee Login</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
    <!-- Custom employee login form fields and styles -->
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Employee Email" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control", placeholder: "Employee Password" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Employee Log in", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
